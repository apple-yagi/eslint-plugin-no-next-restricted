{
	"name": "eslint-plugin-no-next-restricted",
	"version": "0.0.1",
	"type": "module",
	"description": "ESLint plugin to customize restrictions on Next.js imports like next/link and next/image.",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc -b tsconfig.build.json",
		"lint": "pnpm run \"/^lint:.*/\"",
		"lint:biome": "biome check --write",
		"lint:tsc": "tsc --noEmit",
		"test": "node --experimental-strip-types --test src/**/*.test.ts"
	},
	"keywords": ["eslint", "eslint-plugin", "next.js"],
	"author": "apple-yagi",
	"license": "MIT",
	"files": ["src", "!src/**/*.test.ts", "!src/__tests__", "dist"],
	"engines": {
		"node": ">=22.0.0"
	},
	"peerDependencies": {
		"eslint": ">=9.0.0"
	},
	"packageManager": "pnpm@10.6.5",
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/node": "^22.13.10",
		"lefthook": "^1.11.3",
		"typescript": "^5.8.2"
	},
	"pnpm": {
		"onlyBuiltDependencies": ["@biomejs/biome", "lefthook"]
	}
}
