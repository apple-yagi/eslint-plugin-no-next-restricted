{
	"extends": "./tsconfig.base.json",
	"include": ["src", "package.json"],
	"exclude": ["src/**/*.test.ts", "src/__tests__"],
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ESNext"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"outDir": "dist",
		"declarationMap": true,
		"sourceMap": true,
		"rewriteRelativeImportExtensions": true
	}
}
